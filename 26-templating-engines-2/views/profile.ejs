<!--

        EJS templating engine

        * Use <%= %> tags for embedding data
        * Use <% %> tags for embedding JavaScript

-->

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <style type="text/css">
         body { background: skyblue; font-family: 'Verdana'; color: #fff; padding: 30px; }
         h1 { font-size: 48px; text-transform: uppercase; letter-spacing: 2px; text-align: center; }
         h2 { font-size: 30px; text-transform: uppercase; letter-spacing: 2px; text-align: center; }
         p, li { font-size: 16px; text-align: center; }
    </style>
</head>
<body>
    <!-- embed received person object in HTML using <%= %> -->
    <h1>Welcome to the profile of <%= person %></h1>
    <!-- embed received data object age and job -->
    <p><strong>Age: </strong><%= data.age %></p>
    <p><strong>Job: </strong><%= data.job %></p>

    <!-- cycle through hobbies and output to list items -->
    <h2>Hobbies</h2>
    <ul>
        <% data.hobbies.forEach(item => { %>
            <li><%= item %></li>
        <% }) %>
    </ul>

    <p>You won't find a website better anywhere else!</p>
    <p>A project by Daksh Shah</p>
</body>
</html>